<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8dp">

<!--            <ImageView-->
<!--                android:id="@+id/subjectImage"-->
<!--                android:layout_width="@dimen/dimen_80dp"-->
<!--                android:layout_height="@dimen/dimen_80dp"-->
<!--                android:src="@drawable/logo"/>-->
                <TextView
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="@dimen/dimen_80dp"
                    android:textSize="@dimen/dimen_18sp"
                    android:id="@+id/subjectImageTextView"
                    android:background="@color/logoBack"
                    android:text="@string/college"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/subjectImageTextView"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/subjectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:text="Fundamental of Computer Science"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:id="@+id/subjectCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:text="B.Tech Computer Science and Engineering"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>