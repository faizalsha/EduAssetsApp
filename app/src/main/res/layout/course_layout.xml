<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"

        app:cardCornerRadius="@dimen/dimen_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_8dp"

            >


                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/dimen_200dp"
                    android:id="@+id/courseImageTextView"
                    android:background="@color/logoBack"
                    android:text="@string/textEmail"
                    android:textColor="@color/white"
                    android:textSize="80sp"
                    android:gravity="center"
                    android:textAllCaps="true"/>

            <TextView
                android:id="@+id/courseFullTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_below="@id/courseImageTextView"
                android:text="Fundamental of Computer Science"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/all_courses_fragment_course_code_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_below="@id/courseFullTitle"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="B.Tech Computer Science and Engineering"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>